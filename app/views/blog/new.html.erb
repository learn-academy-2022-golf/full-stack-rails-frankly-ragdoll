
    <h1>New Blogpost</h1>

    <%= form_with model:@blog do |form| %>
      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </div>
    
      <div>
        <%= form.label :content %><br>
        <%= form.text_area :content %>
      </div>
    
      <div>
        <%= form.submit %>
      </div>
    <% end %>